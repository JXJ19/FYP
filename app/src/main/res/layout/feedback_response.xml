<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/profilePicture"
            android:layout_width="31dp"
            android:layout_height="35dp"
            android:layout_marginStart="33dp"
            android:layout_marginTop="34dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toStartOf="@+id/profileName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/address" />

        <TextView
            android:id="@+id/profileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="34dp"
            android:layout_marginEnd="245dp"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RatingBar
            android:id="@+id/rating"
            android:layout_width="245dp"
            android:layout_height="45dp"
            android:layout_marginEnd="110dp"
            android:isIndicator="true"
            android:scaleX="0.6"
            android:scaleY="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profileName" />

        <TextView
            android:id="@+id/comment"
            android:layout_width="290dp"
            android:layout_height="105dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="51dp"
            android:background="@color/grey_background"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rating" />


        <EditText
            android:id="@+id/response"
            android:layout_width="293dp"
            android:layout_height="208dp"
            android:layout_marginStart="53dp"
            android:layout_marginTop="51dp"
            android:layout_marginEnd="33dp"
            android:ems="10"
            android:hint="Your Response"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/comment" />

        <LinearLayout
            android:layout_width="317dp"
            android:layout_height="153dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="24dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/response">

            <Button
                android:id="@+id/detailButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Detail" />

            <Button
                android:id="@+id/delete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delete"
                tools:layout_editor_absoluteX="34dp"
                tools:layout_editor_absoluteY="565dp" />

            <Button
                android:id="@+id/responseButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Response"
                tools:layout_editor_absoluteX="235dp"
                tools:layout_editor_absoluteY="565dp" />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>